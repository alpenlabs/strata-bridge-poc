{
    "editor.formatOnSave": true,
    "rust-analyzer.checkOnSave": true,
    "rust-analyzer.check.overrideCommand": [
        "cargo",
        "clippy",
        "--workspace",
        "--all-features",
        "--benches",
        "--tests",
        "--examples",
        "--message-format=json"
    ],
    "rust-analyzer.linkedProjects": [
        "Cargo.toml",
        // "provers/sp1/guest-btc-blockspace/Cargo.toml",
        // "provers/sp1/guest-evm-ee-stf/Cargo.toml",
        // "provers/sp1/guest-cl-stf/Cargo.toml",
        // "provers/sp1/guest-l1-batch/Cargo.toml",
        // "provers/sp1/guest-checkpoint/Cargo.toml",
        // "provers/sp1/guest-cl-agg/Cargo.toml",
    ],
    "rust-analyzer.diagnostics.enable": true,
    "rust-analyzer.cargo.features": [
        "prover"
    ],
    "todohighlight.isEnable": true,
    "todohighlight.isCaseSensitive": true,
    "todohighlight.keywords": [
        {
            "text": "OPTIMIZE:",
            "backgroundColor": "#550055"
        },
        {
            "text": "REVIEW:",
            "backgroundColor": "#24625A"
        },
        {
            "text": "NOTE:",
            "backgroundColor": "#A4E871"
        },
        {
            "text": "HACK:",
            "backgroundColor": "#FBBF24"
        },
        {
            "text": "TODO:",
            "backgroundColor": "#2563EB"
        },
        {
            "text": "FIXME:",
            "backgroundColor": "#DC2626"
        },
        {
            "text": "XXX:",
            "backgroundColor": "#43464C"
        }
    ],
    "todohighlight.include": [
        "**/*.rs",
        "**/*.python",
        "**/*.yaml",
        "**/*.toml"
    ],
    "todohighlight.exclude": [
        "**/target/**",
        "**/.vscode/**"
    ],
    "todohighlight.maxFilesForSearch": 5120
}
